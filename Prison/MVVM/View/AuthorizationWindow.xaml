<Window x:Class="Prison.MVVM.View.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AuthorizationWindow" Height="350" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="30" >
            <TextBlock Text="Тюрьма" FontSize="30" HorizontalAlignment="Center"/>
            <TextBox x:Name="LoginBox" Width="500" Height="40" Margin="0,20,0,20" FontSize="24"/>
            <PasswordBox x:Name="PasswordBox" Width="500" Height="40" FontSize="24"/>
        </StackPanel>
        <Button Content="Войти" Click="Authorization" Grid.Row="1" Height="30" Width="200"/>
    </Grid>
</Window>
